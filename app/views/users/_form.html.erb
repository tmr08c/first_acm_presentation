<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :class_level %><br>
    <%= f.select :class_level,
    options_for_select(
      User.class_levels.map { |status, value| [status.titleize, status] },
      selected: @user.class_level
    ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
