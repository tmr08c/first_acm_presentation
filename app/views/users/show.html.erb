<div class="row">
  <div class="col-md-5">
    <h3>Name</h3>
    <%= @user.name %>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <h3>Email:</h3>
    <%= link_to @user.email, "mailto:#{@user.email}" %>
  </div>
</div>


<div class="row">
  <div class="col-md-5">
    <h3>Class level:</h3>
    <%= @user.class_level.titleize %>
  </div>
</div>

<br><br>

<div class="row">
  <div class="col-md-5">
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning' %>
    <%= link_to 'Back', users_path, class: 'btn btn-danger' %>
  </div>
</div>
